<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PublishActivity">
    <RelativeLayout
        android:background="#2d315d"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/quxiao_publish"
            android:text="取消"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="#beb4b4"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fabu"
            android:text="发布"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textColor="#beb4b4"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:id="@+id/biaoti"
        android:hint="标题"
        android:textSize="16sp"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <ImageView
        android:background="#9d9797"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <EditText
        android:id="@+id/miaoshu"
        android:gravity="top"
        android:maxLines="3"
        android:textSize="16sp"
        android:hint="描述一下你的物品"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <ImageView
        android:id="@+id/camera"
        android:layout_marginLeft="10dp"
        android:background="#e3dfdf"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:padding="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <ImageView
        android:layout_marginTop="10dp"
        android:background="#9d9797"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:src="@drawable/ic_pin_drop_black_24dp"
            android:layout_width="30dp"
            android:layout_height="45dp" />
        <EditText
            android:id="@+id/weizhi"
            android:background="@null"
            android:layout_marginLeft="26dp"
            android:hint="添加位置"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ImageView
        android:background="#e3dfdf"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:padding="3dp"
            android:src="@drawable/ic_monetization_on_black_24dp"
            android:layout_width="30dp"
            android:layout_height="45dp" />
        <EditText
            android:id="@+id/gujia"
            android:background="@null"
            android:layout_marginLeft="28dp"
            android:hint="估价"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ImageView
        android:background="#9d9797"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <ImageView
        android:background="#e3dfdf"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <EditText
        android:id="@+id/jiezhishijian"
        android:background="@null"
        android:textSize="16sp"
        android:hint="截止时间"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <ImageView
        android:background="#e3dfdf"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <EditText
        android:id="@+id/lianxifangshi"
        android:background="@null"
        android:textSize="15sp"
        android:gravity="center"
        android:hint="联系方式"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <LinearLayout
        android:background="#e3dfdf"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>


</LinearLayout>