<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/btn_skyblue"
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_height="45dp">
        </android.support.v7.widget.Toolbar>
        <Button
            android:id="@+id/return_"
            android:background="@drawable/ic_chevron_left_white_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:text="更改名字"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/finish"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:text="完成"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/modificate_name"
        android:backgroundTint="#1dfb37"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/深灰色"
        android:text="好名字可以让你的朋友更容易记住你"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
